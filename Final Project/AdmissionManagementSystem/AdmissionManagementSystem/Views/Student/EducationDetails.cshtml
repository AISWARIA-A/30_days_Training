@model AdmissionManagementSystem.Models.EducationDetails

@{
    ViewBag.Title = "EducationDetails";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}
@if (Session["Username"] != null)
{
    <head>
        <title>Education details</title>
    </head>

    <div>
        <h4>Education details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TenthSchool)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenthSchool)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TenthCGPA)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenthCGPA)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TenthCertificate)
            </dt>
            <dd>
                @if (Model.PlusTwoCertificate != null && Model.PlusTwoCertificate.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.TenthCertificate)" alt="Tenth Certificate" />
                }
                else
                {
                    <span>No Certificate available</span>
                }
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.PlusTwoSchool)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PlusTwoSchool)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PlusTwoCGPA)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PlusTwoCGPA)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PlusTwoCertificate)
            </dt>
            <dd>
                @if (Model.PlusTwoCertificate != null && Model.PlusTwoCertificate.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.PlusTwoCertificate)" alt="Plus Two Certificate" />
                }
                else
                {
                    <span>No Plus Two Certificate available</span>
                }
            </dd>


            @if (!string.IsNullOrEmpty(Model.DegreeCollege))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.DegreeCollege)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DegreeCollege)
                </dd>
            }

            @if (!string.IsNullOrEmpty(Model.DegreeCGPA.ToString()))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.DegreeCGPA)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DegreeCGPA)
                </dd>
            }

            @if (!string.IsNullOrEmpty(Model.DegreeStream))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.DegreeStream)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DegreeStream)
                </dd>
            }

            @if (Model.DegreeCertificate != null && Model.DegreeCertificate.Length > 0)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.DegreeCertificate)
                </dt>

                <dd>
                    @if (Model.DegreeCertificate != null && Model.DegreeCertificate.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.DegreeCertificate)" alt="Degree Certificate" />
                    }
                    else
                    {
                        <span>No Degree Certificate available</span>
                    }
                </dd>
            }

        </dl>
    </div>
}
else
{
    Layout = null;
    <p>Session expired</p>
}