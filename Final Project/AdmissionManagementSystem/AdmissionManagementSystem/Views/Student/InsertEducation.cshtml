@model AdmissionManagementSystem.Models.EducationDetails

@{
    ViewBag.Title = "InsertEducation";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}

@if (Session["Username"] != null)
{
    using (Html.BeginForm("InsertEducation", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <head>
            <title>Education details</title>
        </head>

        <div class="form-horizontal">
            <h4>Education details</h4>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.TenthSchool, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenthSchool, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenthSchool, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenthCGPA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenthCGPA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenthCGPA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="image1">Tenth certificate</label>
                <input type="file" id="image2" name="image1" class="form-control" style="border:hidden!important;" />
                @Html.ValidationMessageFor(model => model.TenthCertificate, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlusTwoSchool, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PlusTwoSchool, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlusTwoSchool, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PlusTwoCGPA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PlusTwoCGPA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PlusTwoCGPA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label" for="image2">Plus two certificate</label>
                <input type="file" id="image2" name="image2" class="form-control" style="border:hidden!important;" />
                @Html.ValidationMessageFor(model => model.PlusTwoCertificate, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DegreeCollege, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DegreeCollege, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DegreeCollege, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DegreeCGPA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DegreeCGPA, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DegreeCGPA, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="padding-bottom:20px">
                <label class="control-label" for="image3">Degree certificate</label>
                <input type="file" id="image3" name="image3" class="form-control" style="border:hidden" />
                @Html.ValidationMessageFor(model => model.DegreeCertificate, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DegreeStream, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DegreeStream, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DegreeStream, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
}
else
{
    Layout = null;
    <p>Session expired</p>
}