
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/Content/CSS/HomeLayout.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar">
        <div class="logo">
            <img src="~/Content/Images/logo.jpeg" />
            <h4>ABC College of Engineering Trivandrum</h4>
        </div>
        <div class="menu">
            @Html.ActionLink("Home", "Home", "Home", new { area = "" }, new { @class = "navigation-text" })
            @Html.ActionLink("About us", "AboutUs", "Home", new { area = "" }, new { @class = "navigation-text" })
            @Html.ActionLink("Contact us", "ContactUs", "Home", new { area = "" }, new { @class = "navigation-text" })
            @Html.ActionLink("Sign up", "Student", "Home", new { area = "" }, new { @class = "navigation-text" })
            <div class="subnav">
                <a href="#" class="subnavbtn">Sign in <i class="fa fa-caret-down"></i></a>
                <div class="subnav-content">
                    @Html.ActionLink("Student", "Login", "Home", new { area = "" }, new { @class = "navigation-text" })
                    @Html.ActionLink("Admin", "Login", "Home", new { area = "" }, new { @class = "navigation-text" })
                </div>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <div class="footer">
        <div class="footer-social-icons">
            <a href="#" target="_blank"><i class="fab fa-facebook-f"></i></a>
            <a href="#" target="_blank"><i class="fab fa-twitter"></i></a>
            <a href="#" target="_blank"><i class="fab fa-instagram"></i></a>
            <a href="#" target="_blank"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <p>ABC College of Engineering, Trivandrum</p>
        <p>info@abccollegetrivandrum.com</p>
        <p>&copy; 2023 ABC College of Engineering. All rights reserved.</p>
    </div>
</body>
</html>
